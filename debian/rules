#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
export DH_VERBOSE = 1
export DH_OPTIONS = -v

# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed

%:
	dh $@

# dh_make generated override targets
override_dh_auto_configure:
	NOCONFIGURE=1 ./autogen.sh
	./configure --prefix=/opt/move

override_dh_auto_build:
	make -j5

override_dh_install:
	dh_install
	# cp $(shell find tests -executable -maxdepth 1 -type f) debian/libaravis-dev/opt/move/bin

tdsclean:
	rm -f ~/proj/libaravis*.deb
	rm -f ~/proj/aravis_0.5.6pre*

tdstarball: tdsclean
	cd ~/proj/aravis
	git clean -df
	tar cvzf ../aravis_0.5.6pre.orig.tar.gz \
		--exclude=.git --exclude=.backup --exclude=.gitignore \
		.

tdsbuild: tdstarball
	debuild --no-lintian -us -uc

tdsshow: tdsbuild
	dpkg --contents ../libaravis-dev_0.5.6pre-1_amd64.deb
